
<%- include('header') %>

<body class="bg">
  <div class="h-100 d-flex align-items-center justify-content-center">
        
        <div class="innerContainer d-flex flex-column justify-content-around">
            <h3 class="text-center p-3 mb-2" style="background-color: rgb(62, 65, 64); color: white; border-radius: 5px;">Create New Task</h3>
            <div class="d-flex flex-column form-control">
                
              <form action="/saveNote" class="text-center" method="post">
                <div class=" text-center">
                  <textarea required placeholder="Enter Task Details" class="mt-5 form-control" name="taskInput" rows="6" ></textarea>
                  <div class="form-check form-switch text-start mt-3">
                    <input class="form-check-input " type="checkbox" name="workSwitch">
                    <label class="form-check-label" for="workSwitch" style="color: black;font-weight: 600;"> Work Task</label>
                  </div>
                  <div class="container text-center p-4 mt-3" style="background-color: antiquewhite;">
                    <div class="row">
                      <div class="d-grid gap-2 d-md-flex ">
                        <button class="btn btn-warning col-6" type="submit">Create Task</button>
                        <a role="button" class="btn btn-danger col-6" href="/home" >Cancel</a>                 
                      </div>
                    </div>
                </div> 
                </div>
                
              </form>
                   
            </div>
            
                
                       
        </div>
    <div>
</body>
