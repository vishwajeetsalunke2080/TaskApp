<%- include('header.ejs') %>
<body class="bg">
  <div class="d-flex flex-column align-items-center ">
    
    <div class="innerContainer">
        <h2 class="m-4 text-center" >
            Create New Task
          </h2>
      <form action="/saveNote" class="text-center" method="post">
        <div class="mb-3 text-center">
          <textarea required placeholder="Enter Task Details" class="mt-5 form-control" name="taskInput" rows="6" ></textarea>
          <button class="btn btn-warning m-4" type="submit">Create Task</button>
          <a href="/home"><button type="button" class="btn btn-danger m-4">Cancel</button></a>  <br>                
          <div class="form-check form-switch text-start">
            <input class="form-check-input" type="checkbox" name="workSwitch">
            <label class="form-check-label" for="workSwitch" style="color: black;font-weight: 600;"> Work Task</label>
          </div>
        </div>
        
      </form>
    </div>
  </div>
</body>
