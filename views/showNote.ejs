<%- include('header.ejs') %>
<body class="bg">
  <div class="d-flex">
    <div class="p-4 justify-content-evenly flex-column flex-grow-2 align-items-center MenuContainer">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item my-2">
          <a class="nav-link active" aria-current="page" href="/home"><i class="fa-solid fa-house"></i> Home</a>
        </li>
        <li class="nav-item my-2">
          <a class="nav-link" href="/workProfile"><i class="fa-solid fa-suitcase"></i> Work Tasks</a>
        </li>
      </ul>
      <div class="form-check form-switch text-start">
        <form action="/workProfile" method="get">
          <input class="form-check-input" type="checkbox" name="workSwitch" onclick="this.form.submit()">
          <label class="form-check-label mx-3" for="workSwitch" style="color: black;font-weight: 600;"> Work Profile</label>
        </form>
      </div>
    </div>

    <div class="p-2 flex-column mx-2 w-75 flex-fill blurContainer">
      <h1 class="my-3 mb-4 text-center">
        Your Personal Tasks
      </h1>

      <% if(locals.listOfNotes.length==0){ %>
        <div class="container text-center mt-5"><img src="images/error.png" class="error" alt="error">
        <h3 style=" color:azure;margin-top: 2em;">Oops!! No Personal Tasks Found </h3>
        
        
      <% }else{ 
            listOfNotes.forEach(element => { %>
                <div class="notesContainer">
                    <div class="card m-2 p-2 customCard">
                        <div class="card-body">
                          <form action="/delete" method="post">
                          <input type="checkbox" name="checkItem" value="<%= element._id%>" class="form-check-input elementChecked">
                          <label class="form-check-label" for="checkItem"> <%=element.taskDesc%>
                          <button type="submit" class="btn btn-danger btn-sm mx-5" name="del" value="<%=element._id%>" ><i class="fa-solid fa-trash"></i></button>

                        </form>
                    </div>
                </div>
           <% }); }%>
           <a href="/addNote" ><button type="button" class="btn btn-warning mt-4" ><i class="fa-solid fa-plus"></i> Create New Task</button></a>
        </div>
        
    
    </div> 
    </div>
</body>


