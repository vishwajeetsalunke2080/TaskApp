<%- include('header') %>

<body class="bg">
  <div class="h-100 d-flex align-items-center justify-content-center">
        
        <div class="innerContainer d-flex flex-column justify-content-around">
            <h3 class="text-center p-3 mb-2" style="background-color: rgb(62, 65, 64); color: white; border-radius: 5px;">Register</h3>
            <div class="d-flex flex-column form-control p-3">
                <form action="/register" method="post">
                    <div class="mt-3">
                        <label for="name" class="m-2" style="font-weight: bold;">Name</label>
                        <input
                            type="text"
                            class="form-control"
                            name="name"
                        />
                    </div>
                    <div class="mt-3">
                    <label for="username" class="m-2" style="font-weight: bold;">Email Address</label>
                    <input
                        type="email"
                        class="form-control"
                        name="username"
                        
                    />
                </div>
                <div class="my-3">
                    <label for="password" class="m-2" style="font-weight: bold;">Password</label>
                    <input
                        type="password"
                        class="form-control"
                        name="password"
                        
                    />
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-warning mt-3 btn-lg col-12">Register</button>
                </div>
            </form>
                <div class="container text-center px-4 py-2 " style="background-color: antiquewhite;">
                    <div class="col">
                      <div class="col gap-3 row-col-4">
                        <p class="mb-1 text-center" style="font-weight: bold; font-size: small;">other ways to register</p>
                        <a role="submit" class="btn btn-danger" href="/auth/google"><i class="fa-brands fa-google"></i> signup with google</a> 
                      </div>
                    </div>
                  </div> 
                   
            </div>
            
                
                       
        </div>
    <div>
</body>
